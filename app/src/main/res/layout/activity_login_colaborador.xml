<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginColaborador">

    <View
        android:id="@+id/bannerboasvindas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bannerboasvindas"
        app:layout_constraintBottom_toTopOf="@id/background_start_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/title_hortaviva_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/hortaviva"
        app:layout_constraintBottom_toBottomOf="@+id/bannerboasvindas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bannerboasvindas" />

    <ImageView
        android:id="@+id/subtitle_boasvindas_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/boas_vindas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_hortaviva_login" />

    <View
        android:id="@+id/background_start_login"
        style="@style/ContainerComponentsLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_acesso_colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Acesso do colaborador"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/background_start_login"/>

    <TextView
        android:id="@+id/label_email_acesso_colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:text="E-mail"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_acesso_colaborador"/>

    <EditText
        android:id="@+id/edt_login_colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Seu E-mail aqui"
        android:maxLength="36"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"
        android:background="@drawable/container_form"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_email_acesso_colaborador"/>

    <TextView
        android:id="@+id/label_senha_acesso_colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:text="Senha"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_login_colaborador"/>

    <EditText
        android:id="@+id/edt_senha_colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sua Senha aqui"
        android:maxLength="36"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:background="@drawable/container_form"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_senha_acesso_colaborador"/>

    <TextView
        android:id="@+id/button_esqueceu_senha_colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu sua senha?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/edt_senha_colaborador"
        app:layout_constraintEnd_toEndOf="@id/edt_senha_colaborador"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button5"
        android:text="Acessar"

        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/button_esqueceu_senha_colaborador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/button_cadastro_colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ£o tem cadastro? Cadastre-se aqui"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>